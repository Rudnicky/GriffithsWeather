<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View" />
        <variable
            name="viewmodel"
            type="com.example.griffithsweather.viewmodels.TodayViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img_background">

        <ImageView
            android:id="@+id/weatherImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="100dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/img_cloud"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view"
            android:layout_width="70dp"
            android:layout_height="1dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="40dp"
            android:background="@color/dividerColor"
            app:layout_constraintStart_toEndOf="@+id/weatherImageView"
            app:layout_constraintTop_toTopOf="@+id/weatherImageView" />

        <TextView
            android:id="@+id/temperatureTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:fontFamily="@font/raleway"
            android:text="@{viewmodel.temperature}"
            android:textColor="@color/primaryTextColor"
            android:textSize="40sp"
            app:layout_constraintBottom_toTopOf="@+id/view"
            app:layout_constraintStart_toStartOf="@+id/view" />

        <TextView
            android:id="@+id/cityTextView"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/raleway"
            android:text="@{viewmodel.city}"
            android:textColor="@color/primaryTextColor"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/view" />

        <ImageView
            android:id="@+id/locationImageView"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/img_location"
            app:layout_constraintStart_toEndOf="@+id/cityTextView"
            app:layout_constraintTop_toBottomOf="@+id/view" />

        <TextView
            android:id="@+id/lastTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:fontFamily="@font/raleway"
            android:text="Last:"
            android:textColor="@color/primaryTextColor"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/dataTextView"
            app:layout_constraintTop_toBottomOf="@+id/cityTextView" />

        <TextView
            android:id="@+id/dataTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:fontFamily="@font/raleway"
            android:text="@{viewmodel.lastUpdate}"
            android:textColor="@color/primaryTextColor"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/refreshImageView"
            app:layout_constraintTop_toTopOf="@+id/lastTextView" />

        <ImageView
            android:id="@+id/refreshImageView"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:src="@drawable/img_refresh"
            app:layout_constraintEnd_toEndOf="@+id/locationImageView"
            app:layout_constraintTop_toTopOf="@+id/dataTextView" />

        <ImageView
            android:id="@+id/tearDropsImageView"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="6dp"
            android:src="@drawable/img_teardrop"
            app:layout_constraintBottom_toTopOf="@+id/horizontalDivider"
            app:layout_constraintStart_toStartOf="@+id/horizontalDivider" />

        <ImageView
            android:id="@+id/windImageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="18dp"
            android:layout_marginRight="18dp"
            android:src="@drawable/img_wind"
            app:layout_constraintBottom_toBottomOf="@+id/tearDropsImageView"
            app:layout_constraintEnd_toStartOf="@+id/cloudImageView"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/tearDropsImageView"
            app:layout_constraintTop_toTopOf="@+id/tearDropsImageView" />

        <ImageView
            android:id="@+id/cloudImageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="6dp"
            android:src="@drawable/img_cloud"
            app:layout_constraintBottom_toTopOf="@+id/horizontalDivider"
            app:layout_constraintEnd_toEndOf="@+id/horizontalDivider"
            app:layout_constraintStart_toEndOf="@+id/verticalLeftDivider"
            app:layout_constraintTop_toTopOf="@+id/windImageView" />

        <TextView
            android:id="@+id/tearDropsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/raleway"
            android:text="@{viewmodel.rainfall}"
            android:textColor="@color/primaryTextColor"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/horizontalDivider"
            app:layout_constraintTop_toBottomOf="@+id/horizontalDivider" />

        <TextView
            android:id="@+id/windTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:fontFamily="@font/raleway"
            android:text="@{viewmodel.windSpeed}"
            android:textColor="@color/primaryTextColor"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/tearDropsTextView"
            app:layout_constraintEnd_toStartOf="@+id/cloudTextView"
            app:layout_constraintHorizontal_bias="0.571"
            app:layout_constraintStart_toEndOf="@+id/tearDropsTextView"
            app:layout_constraintTop_toTopOf="@+id/tearDropsTextView" />

        <TextView
            android:id="@+id/cloudTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway"
            android:text="@{viewmodel.cloudy}"
            android:textColor="@color/primaryTextColor"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/windTextView"
            app:layout_constraintEnd_toEndOf="@+id/cloudImageView"
            app:layout_constraintStart_toEndOf="@+id/verticalLeftDivider"
            app:layout_constraintTop_toTopOf="@+id/windTextView" />

        <View
            android:id="@+id/horizontalDivider"
            android:layout_width="140dp"
            android:layout_height="1dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="80dp"
            android:background="@color/dividerColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/verticalLeftDivider"
            android:layout_width="1dp"
            android:layout_height="35dp"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/dividerColor"
            app:layout_constraintBottom_toBottomOf="@+id/verticalRightDivider"
            app:layout_constraintEnd_toEndOf="@+id/horizontalDivider"
            app:layout_constraintHorizontal_bias="0.67"
            app:layout_constraintStart_toEndOf="@+id/verticalRightDivider"
            app:layout_constraintTop_toTopOf="@+id/verticalRightDivider" />

        <View
            android:id="@+id/verticalRightDivider"
            android:layout_width="1dp"
            android:layout_height="35dp"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="12dp"
            android:background="@color/dividerColor"
            app:layout_constraintStart_toStartOf="@+id/horizontalDivider"
            app:layout_constraintTop_toTopOf="@+id/tearDropsImageView" />

    </android.support.constraint.ConstraintLayout>
</layout>